<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef ParentName="DiseaseBase">
        <defName>ARV_LongResurrectionSickness</defName>
        <label>resurrection sickness</label>
        <description>After-effects of being resurrected by a ritual. Body processes take time to rebalance themselves.</description>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <showRemainingTime>True</showRemainingTime>
                <disappearsAfterTicks>900000~1500000</disappearsAfterTicks>
            </li>
        </comps>
        <stages>
            <li>
                <vomitMtbDays>0.5</vomitMtbDays>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.4</postFactor>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.4</postFactor>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="DiseaseBase">
        <defName>ARV_ShortResurrectionSickness</defName>
        <label>resurrection sickness</label>
        <description>After-effects of being resurrected by a ritual. Body processes take time to rebalance themselves.</description>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <showRemainingTime>True</showRemainingTime>
                <disappearsAfterTicks>900000~1500000</disappearsAfterTicks>
            </li>
        </comps>
        <stages>
            <li>
                <vomitMtbDays>0.5</vomitMtbDays>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.4</postFactor>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.4</postFactor>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>


    <ThoughtDef>
        <defName>UselessResurrection</defName>
        <thoughtClass>Thought_AttendedRitual</thoughtClass>
        <durationDays>6</durationDays>
        <stackLimit>3</stackLimit>
        <stages>
            <li>
                <label>useless resurrection</label>
                <description>That resurrection was useless, why did we even bother attending</description>
                <baseMoodEffect>-6</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef>
        <defName>BadResurrection</defName>
        <thoughtClass>Thought_AttendedRitual</thoughtClass>
        <durationDays>6</durationDays>
        <stackLimit>3</stackLimit>
        <stages>
            <li>
                <label>bad resurrection</label>
                <description>That resurrection was bad, our friend is back... but at what cost?</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef>
        <defName>GoodResurrection</defName>
        <thoughtClass>Thought_AttendedRitual</thoughtClass>
        <durationDays>6</durationDays>
        <stackLimit>3</stackLimit>
        <stages>
            <li>
                <label>good resurrection</label>
                <description>That resurrection went well, we're happy our friend is back</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef>
        <defName>GreatResurrection</defName>
        <thoughtClass>Thought_AttendedRitual</thoughtClass>
        <durationDays>6</durationDays>
        <stackLimit>3</stackLimit>
        <stages>
            <li>
                <label>great resurrection</label>
                <description>The ritual was successful, our friend is amongst the living once more!</description>
                <baseMoodEffect>8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>